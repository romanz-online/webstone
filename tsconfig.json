{
  "compilerOptions": {
    "baseUrl": "./server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@engine": ["Engine.ts"],
      "@ws": ["ws.ts"],
      "@event": ["eventData/Event.ts"],
      "@tryEvent": ["eventData/TryEvent.ts"],
      "@eventStack": ["EventStack.ts"],
      "@gameInstance": ["GameInstance.ts"],
      "@constants": ["constants.ts"],
      "@playerData": ["PlayerData.ts"],

      "@minionData": ["cardData/characterData/minionData/MinionData.ts"],
      "@heroData": ["cardData/characterData/heroData/HeroData.ts"],
      "@effectData": ["cardData/effectData/EffectData.ts"],

      "@minionID": ["cardData/characterData/minionData/MinionID.json"],
      "@heroID": ["cardData/characterData/heroData/HeroID.json"],
      "@effectID": ["cardData/effectData/EffectID.json"],

      "@generateMinion": [
        "cardData/characterData/minionData/generateMinion.ts"
      ],
      "@generateHero": ["cardData/characterData/heroData/generateHero.ts"],
      "@generateEffect": ["cardData/effectData/generateEffect.ts"],

      "@heroes/*": ["cardData/characterData/heroData/heroes/*"],
      "@minions/*": ["cardData/characterData/minionData/minions/*"],
      "@effects/*": ["cardData/effectData/effects/*"],
      "@events/*": ["eventData/events/*"],
      "@tryEvents/*": ["eventData/tryEvents/*"],

      "@card": ["cardData/Card.ts"],
      "@effect": ["cardData/effectData/Effect.ts"],
      "@character": ["cardData/characterData/Character.ts"],
      "@minion": ["cardData/characterData/minionData/Minion.ts"],
      "@hero": ["cardData/characterData/heroData/Hero.ts"]
    }
  }
}
